<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/tts_settings_title"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:layout="@layout/preference_category" android:title="@string/tts_engine_preference_section_title" android:key="tts_engine_preference_section" />
    <PreferenceCategory android:layout="@layout/preference_category" android:title="@string/tts_general_section_title" android:key="tts_general_section">
        <com.android.settings.SeekBarPreference android:layout="@layout/preference_iconless_slider" android:max="600" android:title="@string/tts_default_rate_title" android:key="tts_default_rate" android:summary="@string/tts_default_rate_summary" android:defaultValue="50" />
        <com.android.settings.SeekBarPreference android:layout="@layout/preference_iconless_slider" android:max="400" android:title="@string/tts_default_pitch_title" android:key="tts_default_pitch" android:summary="@string/tts_default_pitch_summary" android:defaultValue="100" />
        <Preference android:persistent="false" android:title="@string/tts_reset_speech_rate_title" android:key="reset_speech_rate" android:summary="@string/tts_reset_speech_rate_summary" />
        <Preference android:persistent="false" android:title="@string/tts_reset_speech_pitch_title" android:key="reset_speech_pitch" android:summary="@string/tts_reset_speech_pitch_summary" />
        <Preference android:persistent="false" android:title="@string/tts_play_example_title" android:key="tts_play_example" android:summary="@string/tts_play_example_summary" android:widgetLayout="@layout/preference_widget_arrow" />
        <Preference android:persistent="false" android:enabled="false" android:title="@string/tts_status_title" android:key="tts_status" android:shouldDisableView="false" />
    </PreferenceCategory>
</PreferenceScreen>